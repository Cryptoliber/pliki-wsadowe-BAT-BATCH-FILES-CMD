@echo off
color 0a
cls
:MENU
@echo _____________________; ------1-KALKULATOR--\---2 - OPERA------\-----3- NOTATNIK--------------------------------
@ECHO PRZYBORNIK MEFIANTE  ; ------4-PENDRIVE----/----5---------------------------------------------------------
@echo off
for /F "tokens=2" %%i in ("date /t") do set mydate=%%i
set mytime=%time%
echo %mydate%:%mytime%       ; --------------------------------------------------------------------
@echo _____________________; ----------------------------------------------------------------------
@echo ---------------------; ----------------------------------------------------------------------
@echo  1        KALKULATOR ; ----------------------------------------------------------------------
@echo ---------------------; ----------------------------------------------------------------------
@echo  2        KALKULATOR ; ----------------------------------------------------------------------
@echo ---------------------; ----------------------------------------------------------------------
@echo ____m______e____f____; ----------------------------------------------------------------------
@ECHO  --------------------------------------------------------------------------------------------
:ME
set /p choice=
if %choice%==1 goto 1
if %choice%==2 goto 2
echo Nie ma takiego polecenia
goto ME

:1 
CALC.EXE
GOTO MENU
:2
CALC.EXE
GOTO MENU
